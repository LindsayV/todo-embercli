<section id="todoapp">
  <header id="header">
    <h1>todos</h1>
  {{input type="text"
         id="new-todo"
         value=newTitle
         placeholder="What needs to be done?"
         action="createTodo"}}
  </header>

  <section id="main">
    {{outlet}}
  </section>

  <footer id="footer">
    <span id="todo-count">
      <strong>{{notCompleted}}
      </strong> todos left
    </span>
    <ul id="filters">
      <li>
        <a href="all" class="selected">All</a>
      </li>
      <li>
        <a href="active">Active</a>
      </li>
      <li>
        <a href="completed">Completed</a>
      </li>
    </ul>
   {{#if hasCompleted}}
      <button id="clear-completed" {{action "clearCompleted"}}>
        Clear completed {{completed}}
      </button>
    {{/if}}
  </footer>
</section>